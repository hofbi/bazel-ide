{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:monthly",
    ":enablePreCommit"
  ],
  "packageRules": [
    {
      "groupName": "{{packageFileDir}} pre-commit updates",
      "matchManagers": [
        "pre-commit"
      ]
    },
    {
      "groupName": "{{packageFileDir}} bazel module updates",
      "matchManagers": [
        "bazel-module"
      ]
    }
  ]
}
